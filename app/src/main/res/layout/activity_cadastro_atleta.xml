<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context="com.example.pichau.projeto_tcc.CadastroAtleta">


    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/etapa_2" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/btCadastrar"
        android:layout_alignLeft="@+id/email"
        android:layout_alignStart="@+id/email" />

    <EditText
        android:id="@+id/email"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/textView4"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/end"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/textView13"
        android:layout_alignLeft="@+id/senha"
        android:layout_alignStart="@+id/senha"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/cpf"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/textView12"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginBottom="12dp" />

    <EditText
        android:id="@+id/rg"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginBottom="15dp" />

    <EditText
        android:id="@+id/nm"
        android:layout_width="275dp"
        android:layout_height="30dp"
        android:background="@color/colorPrimaryDark"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_above="@+id/textView6"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="18dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/senha"
        android:layout_alignEnd="@+id/textView14"
        android:layout_alignRight="@+id/textView14"
        android:layout_marginBottom="26dp"
        android:foregroundTint="@android:color/background_light"
        android:text="Senha:"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="@android:color/background_light"
        android:text="E-Mail:"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        android:layout_above="@+id/email"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="@android:color/background_light"
        android:text="EndereÃ§o:"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        android:layout_above="@+id/end"
        android:layout_alignLeft="@+id/cpf"
        android:layout_alignStart="@+id/cpf" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="@android:color/background_light"
        android:text="CPF:"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        android:layout_above="@+id/cpf"
        android:layout_alignRight="@+id/imageView8"
        android:layout_alignEnd="@+id/imageView8" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="@android:color/background_light"
        android:text="RG:"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        android:layout_above="@+id/textView11"
        android:layout_alignLeft="@+id/rg"
        android:layout_alignStart="@+id/rg"
        android:layout_marginBottom="38dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundTint="@android:color/background_light"
        android:text="Nome:"
        android:textColor="@android:color/background_light"
        android:textColorLink="@android:color/background_light"
        android:textSize="18sp"
        android:layout_above="@+id/nm"
        android:layout_alignLeft="@+id/nm"
        android:layout_alignStart="@+id/nm" />

    <ImageButton
        android:id="@+id/btCadastrar"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:background="@android:color/transparent"
        app:srcCompat="@mipmap/botao_cadastro"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/botao_limpar"
        android:background="@android:color/transparent"
        android:layout_alignTop="@+id/btCadastrar"
        android:layout_toEndOf="@+id/btCadastrar" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true"
        app:srcCompat="@mipmap/opcao_aluno" />

</RelativeLayout>